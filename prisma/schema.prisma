generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @unique @default(uuid())
  login     String      @unique
  password  String
  version   Int
  createdAt Int
  updatedAt Int
}

model Artist {
  id        String      @id @unique @default(uuid())
  name      String
  grammy    Boolean
  albums    Album[]
  tracks    Track[]
}

model Album {
  id        String      @id @unique @default(uuid())
  name      String
  year      Int
  artist    Artist?     @relation(fields: [artistId], references: [id], onDelete: SetNull)
  artistId  String?
  tracks    Track[]
}

model Track {
  id        String      @id @unique @default(uuid())
  name      String
  duration  Int
  artist    Artist?     @relation(fields: [artistId], references: [id], onDelete: SetNull)
  artistId  String?
  album     Album?      @relation(fields: [albumId], references: [id], onDelete: SetNull)
  albumId   String?
}

model Favorites {
  id            String        @id @default(uuid())
  favsArtists   String[]
  favsAlbums    String[]
  favsTracks    String[]
}